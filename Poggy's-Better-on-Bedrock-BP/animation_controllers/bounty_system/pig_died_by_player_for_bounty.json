{
	"format_version": "1.8.0",
	"animation_controllers": {
"controller.animation.pig_died_by_player_for_bounty": {
			
    "initial_state":"not_dead",
   "states": {
       "not_dead":{
           "transitions":[{ "died_by_player": "q.last_hit_by_player == 1 && !q.is_alive" }]
         },
         "died_by_player":{
           "on_entry":[
            "/scoreboard players add @p pig_bounty 1"
            ],
            "transitions": [{"not_dead":"q.last_hit_by_player == 0 && q.is_alive"}]
         }
   }
         }
        }
    }